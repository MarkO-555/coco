1 REM BINARY ENTRY
2 REM V3 12-DEC-99
10 CLEAR 100,12287 : PCLEAR 1
20 DIM T(9)
30 DEF FND(X)=T(X)*256+T(X+1)
50 INPUT "FILENAME";F$
100 PR$="ADDR"
110 LN=0 : GOSUB 1000
120 A1=FND(1)
130 A2=FND(3)
140 A3=FND(5)
150 FOR A=A1 TO A2 STEP 8
160 PR$=RIGHT$("000"+HEX$(A),4)
170 LN=LN+1 : GOSUB 1000
180 FOR B=1 TO 8
190 POKE A+B-1,T(B)
200 NEXT B
290 NEXT A
500 PRINT "SAVING...";
550 SAVEM F$,A1,A2,A3
560 PRINT : PRINT "DONE."
990 END
1000 PRINT PR$;" ";
1010 LINE INPUT H$
1020 IF LEN(H$)=18 THEN 1050
1040 SOUND 9,9 : GOTO 1000
1050 CX=0
1060 FOR TX=1 TO 9
1070 H2$=MID$(H$,TX*2-1,2)
1080 T(TX)=VAL("&H"+H2$)
1090 CX=CX+T(TX) AND 255
1100 NEXT TX
1120 IF CX<>LN THEN 1040
1190 RETURN
